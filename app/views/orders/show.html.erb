<div class="container">
  <div class="col-md-12" align="center" id="user_names">
    <h4 id="order-header-title">Order on <%= @order.created_at.localtime.strftime("%A, %B %d, %Y") %> for <%= @order.user.first_name %></h4>

    <br>

    <h4>Order Number: <%= @order.id %></h4>
    <h5>Order Status: <%= @order.status.capitalize %></h5><br>
    <table class="table table-striped table-bordered table-hover" id="donation-table">
      <tr>
        <th>Candidate</th>
        <th>Issues</th>
        <th>Amount Donated</th>
      </tr>
      <% @donations.each do |donation| %>
      <tr>
        <td id="cart-td"><%= link_to donation.candidate.name, candidate_path(donation.candidate.id) %></td>
        <td><%= link_to donation.issue.topic, issue_path(donation.issue.id) %></td>
        <td><%= number_to_currency(donation.amount) %></td>
      <% end %>
      </tr>
      <tr>
        <td></td>
        <td id="cart-total-donations"><strong>Total Donations</strong></td>
        <td id="cart-total"><%= number_to_currency(@order.total) %></td>
      </tr>
    </table>
  </div>
</div>

<div class="container" id="button-front-page">
  <div class="row">
    <div class="col-md-offset-4 col-md-4" id="profile-button">
      <%= link_to "View Profile", profile_path, class: "btn btn-lg btn-default btn-block btn btn-primary" %>
    </div>
  </div>
</div>

<br><br>

<header id="myCarousel" class="carousel slide">
  <div class="fill" id="slider-1"></div>
</header>

<div class="row" align="center">
  <br>
    <div class="col-md-12" id="flash_notice">
    <%= flash_messages %>
    </div>
</div><br>

<div class="container">
  <div class="row">
    <h1 class="page-header" id="title-1"><%= @candidate.name %></h1>
  </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <p id="header-intro"><%= @candidate.bio %></p>
    </div>
  </div>
  <div class="col-md-4 col-md-offset-4 portfolio-item">
     <%= image_tag("#{@candidate.last_name}.jpg",
         class: "img-responsive img-portfolio",
            id: "#{@candidate.last_name}-image") %>
  </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2" id="stances">
      <% @candidate.candidate_issues.each do |candidate_issue| %>
        <div class="list-group-item" id="candidate_issue-<%= candidate_issue.id %>">
          <%= render partial: "candidate_issue_row",
                      locals: {candidate_issue: candidate_issue} %>
        </div>
      <% end %>
    </div>
  </div>
  <br>
  <h3>Believe in what you've read? Passionate about this particular candidate?
      Apply to become their campaign manager today!</h3>
  <button type="button" class="btn btn-danger btn-lg" data-toggle="modal"
          data-target="#applyModal">
    Apply Now
  </button>

  <div class="modal fade" id="applyModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
  <br><br>
</div>

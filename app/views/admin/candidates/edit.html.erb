<header id="myCarousel" class="carousel slide">
  <div class="fill" id="slider-1"></div>
</header>

<br>
<div class="row" align="center" id="flash_messages">
<br>
  <div class="col-md-12" id="flash_notice">
   <%= render partial: "layouts/flashes" %>
  </div>
</div>
<br>

<div class="container">
  <div class="row">
    <h1 class="page-header" id="title-1"><%= link_to @current_candidate.name, candidate_path(@current_candidate) %></h1>
  </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <%= bootstrap_form_for @current_candidate, url: "/candidates/#{@current_candidate.id}", method: :patch do |f| %>
        <%= f.text_field :bio %>
        <%= f.submit "Update Bio" %>
      <% end %>
    </div>
  </div>

  <div class="col-md-4 col-md-offset-4 portfolio-item">
     <%= image_tag("#{@current_candidate.last_name}.jpg",
         class: "img-responsive img-portfolio",
            id: "#{@current_candidate.last_name}-image") %>
  </div>
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2" id="stances">
      <% @current_candidate.candidate_issues.each do |candidate_issue| %>
        <h4><%= candidate_issue.topic %></h4>
        <%= bootstrap_form_for candidate_issue, method: :patch do |f| %>
          <%= f.text_field :stance %>
          <%= f.submit "Update Stance" %>
        <% end %>
        <br>
        <%= bootstrap_form_for candidate_issue, method: :patch do |f| %>
          <%= f.text_field :goal %>
          <%= f.submit "Update Goal" %>
        <% end %>
        <br>
      <% end %>
    </div>
  </div>
</div>

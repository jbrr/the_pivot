<br>
<div class="row" align="center" id="flash_messages">
  <br>
    <div class="col-md-12" id="flash_notice">
      <%= render partial: "layouts/flashes" %>
    </div>
</div>
<br>

<div class="container">
  <h3 id='title-2'>Dashboard</h3>
  <% if @applicants.count > 0 %>
  <table class="table table-striped table-bordered table-hover" id="application-table">
    <tr>
      <th>Username</th>
      <th>Reason</th>
      <th>Decision</th>
    </tr>
    <tr>
    <% @applicants.each do |applicant| %>
      <h3>Username: <%= applicant.user.username %></h3>
      <h4>Reason: <%= "'#{applicant.reason}'" %></h4>
      <%= link_to "Approve", admin_user_role_path(:value => "Approve", :id => applicant.id), method: :patch, class: "btn btn-success" %>
      <%= link_to "Decline", admin_user_role_path(:value => "Decline", :id => applicant.id), method: :patch, class: "btn btn-danger" %>
    <% end %>
  </table>
  <% else %>
    <h4 id="cart-empty">No Campaign Managers to Approve Currently</h4>
  <% end %>
</div>

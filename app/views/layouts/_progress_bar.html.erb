<div class="progress">
  <div class="progress-bar progress-bar-danger" roll="progressbar"
       aria-valuenow="<%= candidate_issue_raised_total(candidate_issue.id) %>"
       aria-valuemin="0" aria-valuemax="<%= candidate_issue.goal %>"
       style="width: <%= candidate_issue_raised_total(candidate_issue.id).to_f /
              candidate_issue.goal.to_f * 100 %>%;">
       <%= (candidate_issue_raised_total(candidate_issue.id).to_f / candidate_issue.goal.to_f * 100).to_i %>%
  </div>
</div>
